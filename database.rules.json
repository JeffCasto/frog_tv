{
  "rules": {
    "frogs": {
      ".read": true,
      "$frogId": {
        ".write": false,
        ".validate": "newData.hasChildren(['id', 'mood', 'action', 'targetX', 'targetY'])"
      }
    },
    "chat": {
      ".read": true,
      ".indexOn": ["ts"],
      "$messageId": {
        ".write": "!data.exists()",
        ".validate": "newData.hasChildren(['user', 'text', 'ts']) && newData.child('text').val().length <= 200"
      }
    },
    "triggers": {
      ".read": true,
      ".write": false
    },
    "lore": {
      ".read": true,
      ".indexOn": ["timestamp"],
      ".write": false
    }
  }
}
